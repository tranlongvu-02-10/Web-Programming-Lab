@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="card p-4 shadow-sm text-center">
        <h1 class="text-danger mb-3">Error.</h1>
        <h2 class="text-danger mb-4">An error occurred while processing your request.</h2>

        @if (Model.ShowRequestId)
        {
            <p class="mb-4">
                <strong>Request ID:</strong> <code class="bg-light p-1 rounded">@Model.RequestId</code>
            </p>
        }

        <h3 class="text-primary mb-3">Development Mode</h3>
        <p class="text-muted mb-3">
            Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred.
        </p>
        <p class="text-muted">
            <strong>The Development environment shouldn't be enabled for deployed applications.</strong>
            It can result in displaying sensitive information from exceptions to end users.
            For local debugging, enable the <strong>Development</strong> environment by setting the <strong>ASPNETCORE_ENVIRONMENT</strong> environment variable to <strong>Development</strong>
            and restarting the app.
        </p>
    </div>
</div>

<style>
    /* Tùy chỉnh tổng thể */
    .container.mt-5 {
        max-width: 700px; /* Giới hạn chiều rộng cho gọn gàng */
    }

    .card {
        border: none; /* Bỏ viền mặc định */
        border-radius: 15px; /* Bo góc mềm mại */
        background: #ffffff;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); /* Bóng nhẹ */
    }

    /* Tùy chỉnh tiêu đề lỗi */
    h1.text-danger {
        font-size: 2.5rem;
        font-weight: 700;
        color: #dc3545; /* Màu đỏ giữ nguyên */
        letter-spacing: 1px;
    }

    h2.text-danger {
        font-size: 1.5rem;
        font-weight: 600;
        color: #dc3545;
    }

    /* Tùy chỉnh Request ID */
    p strong {
        color: #00246B; /* Màu xanh đậm cho nhãn */
    }

    code {
        background-color: #f8f9fa; /* Nền sáng cho code */
        padding: 4px 8px;
        border-radius: 5px;
        font-size: 0.95rem;
        color: #dc3545; /* Màu đỏ cho Request ID */
    }

    /* Tùy chỉnh Development Mode */
    h3.text-primary {
        font-size: 1.3rem;
        font-weight: 600;
        color: #00246B; /* Đổi sang màu xanh đậm cho đồng bộ */
    }

    p.text-muted {
        font-size: 1rem;
        line-height: 1.6;
        color: #6c757d; /* Màu xám nhạt */
    }

    p.text-muted strong {
        color: #dc3545; /* Màu đỏ cho các từ nhấn mạnh */
        font-weight: 600;
    }
</style>