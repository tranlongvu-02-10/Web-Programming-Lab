@using Lab04.WebsiteBanHang.Models
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebsiteBanHang</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" />
    <!-- Bootstrap icons--> 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        /* Tùy chỉnh tổng thể */
       body {
    background-color: #CADCFC;
    color: #00246B;
    font-family: 'Arial', sans-serif;
}

.navbar {
    background: #00246B;
    color: #CADCFC;
    padding: 15px;
}

.navbar-brand, .nav-link {
    color: #CADCFC !important;
}

.nav-link:hover {
    color: #ffffff !important;
}

.btn-primary {
    background-color: #00246B;
    border: none;
    color: #CADCFC;
}

.btn-primary:hover {
    background-color: #001a4d;
}

.card {
    background: #ffffff;
    border: 2px solid #00246B;
    color: #00246B;
}

.footer {
    background: #00246B;
    color: #CADCFC;
    text-align: center;
    padding: 20px 0;
}

.footer a {
    color: #CADCFC;
}

.footer a:hover {
    color: #ffffff;
}
.carousel-inner img {
    width: 100%;
    height: 400px; /* Hoặc đặt kích thước phù hợp */
    object-fit: cover; /* Giúp hình ảnh không bị méo */
}

.timeline {
    position: relative;
    padding-left: 20px;
    border-left: 3px solid #00246B;
}

.timeline-item {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
}

.timeline-img {
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: 10px;
    margin-right: 15px;
}

.timeline-content {
    background: #CADCFC;
    padding: 10px;
    border-radius: 10px;
}

/* CSS cho footer mới */
footer {
    background-color: #004080; /* Màu xanh đậm */
    color: white;
    text-align: center;
    padding: 15px 0;
    font-size: 16px;
    font-weight: bold;
    width: 100%;
    position: relative;
    bottom: 0;
}

.footer-container {
    max-width: 1200px;
    margin: auto;
}


    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-cart-fill"></i> WEBSITE BÁN HÀNG
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Product" asp-action="Index">Sản phẩm</a>
                        </li>
                        @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Company))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Category" asp-action="Index">Danh mục</a>
                            </li>
                        }
                        @if (User.IsInRole(SD.Role_Admin))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="User" asp-action="Index">Quản lý người
                                    dùng</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                    <a href="@Url.Action("Index", "ShoppingCart")" class="btn btn-outline-light border-2">
                        <i class="bi-cart-fill me-1"></i>
                        Cart
                    </a>
                </div>
            </div>
        </nav>
    </header>
  
  @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index")
  {
  <!-- #region -->
  <div id="bannerCarousel" class="carousel slide mb-4" data-bs-ride="carousel" data-bs-interval="2000">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/banner1.jpg" class="d-block w-100" alt="Banner 1" asp-append-version="true">
        </div>
        <div class="carousel-item">
            <img src="~/images/banner22.jpg" class="d-block w-100" alt="Banner 2" asp-append-version="true">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </button>
</div>
}


    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

@if (ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index")
{
    <section class="container my-5">
    <h2 class="text-center text-primary">Why Choose Us?</h2>
    <h3 class="text-center text-dark">Best Selling Shoes Collection</h3>
    <div class="row">
        <div class="col-md-6">
            <div class="timeline">
                <div class="timeline-item">
                    <img src="~/images/sale1.png" class="timeline-img">
                    <div class="timeline-content">
                        <h4>Nike Air Max</h4>
                        <p>Comfortable and stylish, perfect for everyday wear.</p>
                    </div>
                </div>
                <div class="timeline-item">
                    <img src="~/images/sale2.png" class="timeline-img">
                    <div class="timeline-content">
                        <h4>Adidas Ultraboost</h4>
                        <p>Lightweight running shoes with ultimate cushioning.</p>
                    </div>
                </div>
                <div class="timeline-item">
                    <img src="~/images/sale3.png" class="timeline-img">
                    <div class="timeline-content">
                        <h4>Puma RS-X</h4>
                        <p>Trendy sneakers for those who love fashion and comfort.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 d-flex align-items-center">
            <img src="~/images/poster.jpg" class="img-fluid rounded shadow">
        </div>
    </div>
</section>
}

@if (ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index")
{
<footer>
    <div class="footer-container">
        <p>&copy; 2025 Website Bán Hàng. All Rights Reserved.</p>
    </div>
</footer>


}


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>