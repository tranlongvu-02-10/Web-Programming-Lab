@using Lab04.WebsiteBanHang.Models
@model Order

<div class="container mt-5">
    <h2 class="text-center mb-4">Checkout</h2> 
    <div class="card p-4 shadow-sm">
        <form asp-action="Checkout" method="post"> 
            <div class="form-group mb-3"> 
                <label asp-for="ShippingAddress" class="form-label">Shipping Address</label> 
                <input asp-for="ShippingAddress" class="form-control" /> 
                <span asp-validation-for="ShippingAddress" class="text-danger"></span> <!-- Thêm thông báo lỗi -->
            </div> 
            <div class="form-group mb-4"> 
                <label asp-for="Notes" class="form-label">Notes</label> 
                <textarea asp-for="Notes" class="form-control" rows="4"></textarea> 
                <span asp-validation-for="Notes" class="text-danger"></span> <!-- Thêm thông báo lỗi (nếu cần) -->
            </div> 
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Place Order</button> 
            </div>
        </form> 
    </div>
</div>

<style>
    /* Tùy chỉnh tổng thể */
    .container.mt-5 {
        max-width: 600px;
    }

    h2.text-center {
        color: #00246B;
        font-weight: 700;
        letter-spacing: 1px;
    }

    .card {
        border: none;
        border-radius: 15px;
        background: #ffffff;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        color: #00246B;
        font-weight: 600;
        font-size: 1.1rem;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 8px;
        padding: 10px;
        font-size: 1rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-control:focus {
        border-color: #00246B;
        box-shadow: 0 0 5px rgba(0, 36, 107, 0.3);
        outline: none;
    }

    textarea.form-control {
        resize: vertical;
        min-height: 100px;
    }

    .btn-primary {
        background: #00246B;
        border: none;
        padding: 12px 30px;
        border-radius: 8px;
        font-size: 1.1rem;
        font-weight: 600;
        transition: background 0.3s ease, transform 0.2s ease;
    }

    .btn-primary:hover {
        background: #001a4d;
        transform: scale(1.05);
    }

    /* Tùy chỉnh thông báo lỗi */
    .text-danger {
        font-size: 0.9rem;
        margin-top: 5px;
        display: block;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" /> <!-- Thêm script validation -->
}